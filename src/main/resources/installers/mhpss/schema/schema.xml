<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet failOnError="true" author="Dikum-Aduwu" id="mhpss-26032024-2">
        <preConditions>
            <not>
                <tableExists tableName="mhpss_screening"/>
            </not>
        </preConditions>
        <createTable tableName="mhpss_screening">
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="person_uuid" type="varchar(255)">
                <constraints foreignKeyName="fk_person_uuid" references="patient_person(uuid)" />
            </column>
            <column name="patient_visit_id" type="varchar(255)">
                <constraints foreignKeyName="fk_patient_visit_id" references="patient_visit(uuid)" />
            </column>
            <column name="created_by" type="varchar(255)">
            </column>
            <column name="updated_by" type="varchar(255)">
            </column>
            <column name="created_at" type="timestamp">
            </column>
            <column name="updated_at" type="timestamp">
            </column>
            <column name="archived" type="boolean">
            </column>
            <column name="encounter_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="sleep_issues" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="recent_calmness" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="suicidal_thoughts" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="recent_activity_challenge" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="substance_abuse" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="referred" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="screened_by" type="varchar(255)"/>
            <column name="facility_id" type="bigint" />
        </createTable>
    </changeSet>

    <changeSet failOnError="true" author="Dikum-Aduwu" id="mhpss-confirmation-26032024-2">
        <preConditions>
            <not>
                <tableExists tableName="mhpss_confirmation"/>
            </not>
        </preConditions>
        <createTable tableName="mhpss_confirmation">
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="created_by" type="varchar(255)">
            </column>
            <column name="updated_by" type="varchar(255)">
            </column>
            <column name="created_at" type="timestamp">
            </column>
            <column name="updated_at" type="timestamp">
            </column>
            <column name="archived" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="mhpss_screening" type="varchar(255)">
                <constraints foreignKeyName="fk_mhpss_screening" references="mhpss_screening(id)" />
            </column>
            <column name="patient_visit_id" type="varchar(255)">
                <constraints foreignKeyName="fk_patient_visit_id" references="patient_visit(uuid)" />
            </column>
            <column name="interventions_rendered" type="jsonb" />
            <column name="session_modality" type="varchar(255)" />
            <column name="risks_confirmed" type="jsonb" />
            <column name="current_level_of_insight" type="varchar(255)" />
            <column name="confirmation_outcome" type="varchar(255)" />
            <column name="confirmed_by" type="varchar(255)" />
            <column name="gad_7" type="varchar(255)" />
            <column name="audit_c" type="varchar(255)" />
            <column name="pcl_5" type="varchar(255)" />
            <column name="phq_9" type="varchar(255)" />
            <column name="dast_10" type="varchar(255)" />
            <column name="diagnosis" type="text" />
            <column name="diagnosed_by" type="varchar(255)" />
            <column name="clinician_name" type="varchar(255)" />
            <column name="facility_id" type="bigint" />
            <column name="encounter_date" type="date">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
